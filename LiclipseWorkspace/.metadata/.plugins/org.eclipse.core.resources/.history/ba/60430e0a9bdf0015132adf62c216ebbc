import os, sys
import PyPDF2
import codecs

def read():
    reload(sys)  
    sys.setdefaultencoding('utf8')
    fo =open ('16d03.txt', 'w')
    pdfFileObj = open('16d03.pdf', 'rb')
    pdfReader = PyPDF2.PdfFileReader(pdfFileObj)
    numPages =  pdfReader.numPages
    for i in range(0,numPages):
        pageObj = pdfReader.getPage(i)
        pageText = pageObj.extractText()
        print pageText[0], pageText.count('\''), pageText.count(u'u\2122')
        j = i+1
        if(pageText[0] != ' ' and int(pageText[0]) == j):
            pageText = pageText[3:]
        pageText.replace('a','e')
        pageText.replace(u'u\2122','\'')
        fo.write(pageText)
        fo.write("\n")
    fo.write("coucou")
    fo.close()
    pdfFileObj.close()
    


if __name__ == '__main__':
    read()


